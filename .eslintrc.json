{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": [
		"standard",
		"eslint:recommended"
	],
    "plugins": ["promise"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
		"semi": "error",
		"indent": [
			"error",
			2
		],
		"prefer-const": [
			"error",
			{
				"ignoreReadBeforeAssign": true
			}
		],
		"space-before-function-paren": "off",
		"no-var": "error",
		"no-console": "off",
		"no-unused-expressions": 0
	}
}